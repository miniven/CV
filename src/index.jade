	// Projects //
	//////////////

	section.section.section--projects#projects
		.section__container
			h2.subtitle Projects
		.projects
			.projects__block
				a.card(href="http://90gradysov.ru/" target="_blank")
					img.card__image(src="/images/projects/90gr.jpg", alt="")
					.card__inner
						h3.card__title 90 Градусов
			.projects__block
				a.card(href="http://pchurch.ru/" target="_blank")
					img.card__image(src="/images/projects/pchurch.jpg", alt="")
